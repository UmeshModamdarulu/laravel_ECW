{
  "name": "Laravel Dev Container",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspaces/laravel_ECW",

  "features": {
    "ghcr.io/devcontainers-contrib/features/php": {
      "version": "8.3"
    },
    "ghcr.io/devcontainers-contrib/features/composer": "latest",
    "ghcr.io/devcontainers/features/node": "latest",
    "ghcr.io/devcontainers/features/git": "latest"
  },

  "postCreateCommand": "composer install && npm install"
}